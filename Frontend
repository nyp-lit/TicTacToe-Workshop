  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      text-align: center;
    }

    .top-bar {
      padding: 10px 0;
      font-size: 24px;
      font-weight: bold;
    }

    .header {
      background-color: #5C2D91;
      color: white;
      padding: 10px;
      font-size: 20px;
    }

    .player-setup input {
      margin: 5px;
    }

    .game-board {
      display: grid;
      grid-template-columns: repeat(3, 100px);
      grid-gap: 5px;
      justify-content: center;
      margin-top: 20px;
    }

    .cell {
      width: 100px;
      height: 100px;
      font-size: 36px;
      background-color: #ccc;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
    }

    .btn {
      padding: 10px 20px;
      margin: 10px;
      background-color: #4A10A2;
      color: white;
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #3881FF;
    }
  </style>
